<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xmins="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/about_us">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/card_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                xmins:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="100dp"
                app:civ_border_width="2dp"
                android:src="@drawable/profile_pic" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableStart="@drawable/ic_user"
                    android:fontFamily="@font/helvetica_light"
                    android:hint="  |  Nom"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:drawableLeft="@drawable/ic_user" />

                <EditText
                    android:id="@+id/em"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="-25dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/edit_text_background"
                    android:drawableStart="@drawable/ic_user"
                    android:fontFamily="@font/helvetica_light"
                    android:hint="  |  Prenom"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="16dp"
                    android:paddingRight="26dp"
                    android:drawableLeft="@drawable/ic_user" />
            </LinearLayout>

            <EditText
                android:id="@+id/cal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_calendar"
                android:fontFamily="@font/helvetica_light"
                android:hint="  |  hn_nekamiche@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:drawableLeft="@drawable/ic_calendar" />

            <EditText
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_card"
                android:fontFamily="@font/helvetica_light"
                android:hint="@string/obj"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:drawableLeft="@drawable/ic_card" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_phone"
                android:fontFamily="@font/helvetica_light"
                android:hint="@string/msg"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:drawableLeft="@drawable/ic_phone" />
            <EditText
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/edit_text_background"
                android:drawableStart="@drawable/ic_camera"
                android:fontFamily="@font/helvetica_light"
                android:hint="@string/msg"
                android:inputType="textEmailAddress"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:drawableLeft="@drawable/ic_camera" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/custom_btn"
                    android:text="@string/save"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/helvetica_bold"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    app:backgroundTint="@color/yellow"
                    app:strokeColor="@color/yellow" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>