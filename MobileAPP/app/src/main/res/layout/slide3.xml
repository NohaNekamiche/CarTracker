<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="247dp"
        android:layout_height="224dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/slide3" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="266dp"
        android:layout_height="76dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:text="@string/title_slide3"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/next"
        android:layout_width="97dp"
        android:layout_height="27dp"
        android:gravity="center_horizontal"
        android:text="@string/next"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.954" />



    <Button
        android:id="@+id/btn1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/circle_btn_gray"
        app:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/circle_btn_gray"
        app:backgroundTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt3" />

    <Button
        android:id="@+id/btn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/circle_btn_yellow"
        app:backgroundTint="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt3" />

    <TextView
        android:id="@+id/txt3"
        android:layout_width="251dp"
        android:layout_height="89dp"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="@string/txt_slide3"
        android:textAlignment="center"
        android:textColor="@color/dark_gray"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title3" />

</androidx.constraintlayout.widget.ConstraintLayout>