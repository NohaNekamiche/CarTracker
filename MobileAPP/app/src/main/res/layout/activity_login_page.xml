<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authentification.login_page"
    android:orientation="vertical"
    android:background="@drawable/login_dark_background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginLeft="36dp"
            android:text="@string/login"
            android:textStyle="bold"
            android:textColor="@color/yellow"
            android:textSize="35sp"
            android:fontFamily="@font/helvetica_bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            >
            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="60dp"
                android:hint="  |  hn_nekamiche@gmail.com"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/edit_text_background"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/helvetica_light"
                android:drawableLeft="@drawable/ic_user" />
            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="  |  Password"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:inputType="textPassword"
                android:layout_marginTop="24dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/helvetica_light"
                android:drawableRight="@drawable/ic_invisible"
                android:drawableLeft="@drawable/ic_lock" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp">
                <TextView
                    android:id="@+id/forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forget_pwd"
                    android:textColor="@color/dark_gray"
                    android:textSize="10sp"
                    android:fontFamily="@font/helvetica_light"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp">

                <Button
                    android:id="@+id/login"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn"
                    android:text="@string/se_connecter"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/helvetica_bold"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:backgroundTint="@color/yellow"
                    app:strokeColor="@color/yellow" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp">

                <Button
                    android:id="@+id/singUp"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:background="@drawable/custom_btn"
                    android:text="@string/inscription"
                    android:textColor="@color/dark_gray"
                    android:fontFamily="@font/helvetica_bold"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:backgroundTint="@color/yellow"
                    app:strokeColor="@color/yellow" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>